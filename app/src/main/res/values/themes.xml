<resources>
    <style name="Theme.Ice" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/backgroundcolor_app</item>
    </style>
    <style name="Theme.Ice.Splashscreen">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>
</resources>